<body class="websites">
  <main class="d-flex border border-warning justify-content-center align-items-center">
    <div class="d-flex flex-column justify-content-start align-items-center text-center mt-3 content">

    <header class="d-inline-flex flex-column fixed-top mt-2 text-center justify-content-center align-items-center">
      <h1>Websites</h1>
      <% if notice || alert %>
        <p id="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      <% end %>
    </header>

      <div class="container-fluid d-flex flex-wrap justify-content-around align-items-center mr-3 pr-3 mt-4">
        <% @websites.each do |website| %>
          <div class="d-flex my-5 flex-wrap justify-content-around align-items-center p-3 site-card">
            <div class="col-sm text p-2">
              <p class='title'>
                <%= website.title %>
              </p>
              <div class="w-100"></div>
              <p class="description">
                <%= website.description %>
              </p>
              <%= link_to 'Visit Website', website.url %>
              <%= link_to 'View Code', website.code %>
              <div class="w-100"></div>
              <% if user_signed_in? and current_user.role == 'admin' %>
                <%= link_to 'Edit', edit_website_path(website) %>
                <%= link_to 'Destroy', website, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
            </div>
            <%= image_tag("#{website.image}", :alt => "#{website.title} Mockup", :class => 'img-fluid img-thumbnail mock-up') %>
          </div>
        <% end %>
      </div>
      <% if user_signed_in? and current_user.role == 'admin' %>
        <%= link_to 'New Website', new_website_path, :class => 'fixed-bottom mb-2 add' %>
      <% end %>
  </div>
</main>
</body>
