<body class="home">

  <main class="d-flex border border-warning justify-content-center align-items-center pl-5">
    <section class="position-absolute d-flex flex-column text-center mt-3 mr-3">
      <% if user_signed_in? %>
        <%= link_to "Hello #{current_user.name}!", destroy_user_session_path, method: :delete, class: 'logout' %>
      <% else %>
        <%= link_to '<i class="fas fa-cog"></i>'.html_safe, new_user_session_path, class: 'login' %>
      <% end %>
    </section>
    <div class="d-flex flex-column justify-content-center align-items-center text-center ml-4">
      <h1 class='m-3'>Hello! I'm Brandon!</h1>
      <h3 class='m-3'>I'm a <span class='title-change'>coder</span></h3>
      <h5 class='m-3'>I love to <span class='interest-change'>debug code</span></h5>

      <p class='m-3'>How can I help you?</p>
        <div class="d-flex flex-column flex-sm-row m-3 content">
        <button class='web-form btn'><%= link_to 'I need a website', web_form_path %></button>
        <button class='employee-form btn'><%= link_to 'I need an employee', employee_form_path %></button>
        <button class='tutor-form btn'><%= link_to 'I need a tutor', tutor_form_path %></button>
      </div>
      <%# link_to 'about', portal_about_path %>
    </div>
  </main>
