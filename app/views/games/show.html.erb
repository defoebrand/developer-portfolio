<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>
<main class="d-flex justify-content-center align-items-center pl-5">
  <div class="d-flex flex-column justify-content-center align-items-center text-center ml-4">
    <h4 class='show-title'>
      <b>
        <%= @game.title %>
      </b>
    </h4>
    <p class='show-description p-3'>
      <%= @game.description %>
    </p>
    <div class="m-2">
      <% unless @game.stacks.empty? %>
        <% @game.stacks.each do |stack|%>
          <%= content_tag(:p, stack.name, class: "btn btn-#{stack.color}") %>
        <% end %>
      <% end %>
    </div>
    <%= tag(:br) %>
    <%= link_to 'Back', games_path %>
  </div>
</main>